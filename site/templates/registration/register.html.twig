{% extends "layout/base.html.twig" %}

{% block title %}
Register
{% endblock title %}

    {% block body %}
        <div class="d-flex flex-column align-items-center justify-content-center my-5">
            <h1 class="m-3">Register</h1>
        
            {{ form_errors(registrationForm) }}
        
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.firstname,{'attr': {'class': 'm-3 form-control'}} )}}
                {{ form_row(registrationForm.lastname,{'attr': {'class': 'm-3 form-control'}} )}}
                {{ form_row(registrationForm.email,{'attr': {'class': 'm-3 form-control'}} )}}
                {{ form_row(registrationForm.Password, {'attr': {'class': 'm-3 form-control'}} ) }}
                {{ form_row(registrationForm.agreeTerms,{'attr': {'class': 'm-3 form-check-input '}} ) }}
        
                <button type="submit" class="btn btn-primary m-3">Register</button>
            {{ form_end(registrationForm) }}
        </div>
    {% endblock %}


