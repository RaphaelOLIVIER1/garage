{% extends "layout/base.html.twig" %}
{% block title %}
    User index
{% endblock title %}
{% block body %}
<div class="m-5">

    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                {# td>{{ user.roles ? user.roles|json_encode : '' }}</td> #}
                <td>{{ user.password }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>
                    <a class="btn btn-primary my-2" href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a  class="btn btn-success my-2" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary m-3" href="{{ path('app_user_new') }}">Create new</a>
    <a class="btn btn-secondary m-3" href="{{ path('app_horraire_index') }}">back to home</a>
</div>
{% endblock %}
